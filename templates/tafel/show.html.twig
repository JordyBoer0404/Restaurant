{% extends 'base.html.twig' %}

{% block title %}Tafel{% endblock %}

{% block body %}
    <h1>Tafel</h1>

    <table class="table table-striped table-responsive">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ tafel.id }}</td>
            </tr>
            <tr>
                <th>Personen</th>
                <td>{{ tafel.Personen }}</td>
            </tr>
            <tr>
                <th>Naam</th>
                <td>{{ tafel.Naam }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('tafel_index') }}"><button class="btn btn-primary">Terug naar lijst</button></a>
<br><br>
    <a href="{{ path('tafel_edit', {'id': tafel.id}) }}"><button class="btn btn-success">Bewerken</button></a>
<br><br>
    {{ include('tafel/_delete_form.html.twig') }}
{% endblock %}
