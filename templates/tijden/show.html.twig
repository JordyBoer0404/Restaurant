{% extends 'base.html.twig' %}

{% block title %}Tijden{% endblock %}

{% block body %}
    <h1>Tijden</h1>

    <table class="table table-striped table-responsive">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ tijden.id }}</td>
            </tr>
            <tr>
                <th>Dag</th>
                <td>{{ tijden.Dag }}</td>
            </tr>
            <tr>
                <th>Starttijd</th>
                <td>{{ tijden.Starttijd ? tijden.Starttijd|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Eindtijd</th>
                <td>{{ tijden.Eindtijd ? tijden.Eindtijd|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('tijden_index') }}"><button class="btn btn-primary">Terug naar lijst</button></a>
<br><br>
    <a href="{{ path('tijden_edit', {'id': tijden.id}) }}"><button class="btn btn-success">Bewerken</button></a>
<br><br>
    {{ include('tijden/_delete_form.html.twig') }}
{% endblock %}
