{% extends 'base.html.twig' %}

{% block title %}Tijden index{% endblock %}

{% block body %}
    <h1>Tijden Lijst</h1>

    <table class="table table-striped table-responsive">
        <thead>
            <tr>
                <th>Id</th>
                <th>Dag</th>
                <th>Starttijd</th>
                <th>Eindtijd</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for tijden in tijdens %}
            <tr>
                <td>{{ tijden.id }}</td>
                <td>{{ tijden.Dag }}</td>
                <td>{{ tijden.Starttijd ? tijden.Starttijd|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ tijden.Eindtijd ? tijden.Eindtijd|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('tijden_show', {'id': tijden.id}) }}"><button class="btn btn-primary">Bekijk</button></a>
                    <a href="{{ path('tijden_edit', {'id': tijden.id}) }}"><button class="btn btn-success">Bewerk</button></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Geen rijen gevonden</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('tijden_new') }}"><button class="btn btn-primary">Maak nieuwe</button></a>
{% endblock %}
