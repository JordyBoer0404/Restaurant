{% extends 'base.html.twig' %}

{% block title %}Reservering{% endblock %}

{% block body %}
    <h1>Reservering</h1>

    <table class="table table-striped table-responsive">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ reservering.id }}</td>
            </tr>
            <tr>
                <th>Klant</th>
                <td>{{ reservering.Klant }}</td>
            </tr>
            <tr>
                <th>Datum</th>
