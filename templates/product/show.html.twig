{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <h1>Product</h1>

    <table class="table table-striped table-responsive">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Naam</th>
                <td>{{ product.Naam }}</td>
            </tr>
            <tr>
                <th>Beschrijving</th>
                <td>{{ product.Beschrijving }}</td>
            </tr>
            <tr>
                <th>Prijs</th>
                <td>{{ product.Prijs }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('product_index') }}"><button class="btn btn-primary">Terug naar lijst</button></a>
<br><br>
    <a href="{{ path('product_edit', {'id': product.id}) }}"><button class="btn btn-success">Bewerken</button></a>
<br><br>
    {{ include('product/_delete_form.html.twig') }}
{% endblock %}
